   h2(class="font-outfit size-24 normalBlack text-center weight-bold")=name 
   h3(class="dmsans size-16 brown weight-400 text-center mrb-5 mtop-5")=title 
   h4(class="dmsans size-16 brown weight-400 text-center")=position


